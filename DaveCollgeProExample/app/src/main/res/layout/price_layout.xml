<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="219dp"
        android:src="@drawable/window"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="219dp"
        android:id="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:src="@drawable/app_pic"
        android:layout_above="@+id/ratingBar1" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="5"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentStart="true" />


    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Workman&apos;s Compensation"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentStart="true" />


    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="$2,000,000 Liability Insurance"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/ratingBar1"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtRegPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular Price :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="8pt"
        android:visibility="visible"
        android:layout_below="@+id/sRegular"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtEavesPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eaves"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible"
        android:layout_below="@+id/txtSpecialPrice"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtSidingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siding"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible"
        android:layout_alignBottom="@+id/txtSpecialPrice"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtSpecialPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Discounted Price of 20% Off : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="10pt" android:textColor="#FF0000"
        android:visibility="visible"
        android:layout_below="@+id/txtRegPrice"
        android:layout_toEndOf="@+id/checkBox1" />

    <TextView
        android:id="@+id/txtSaveHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This saves you : "
        android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#CC0066"
        android:layout_below="@+id/txtSpecialPrice"
        android:layout_alignStart="@+id/txtSpecialPrice"
        android:layout_marginTop="15dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular"
        android:id="@+id/sRegular"
        android:layout_below="@+id/checkBox1"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount"
        android:id="@+id/sDiscount"
        android:layout_below="@+id/checkBox1"
        android:layout_toEndOf="@+id/ratingBar1"/>


</RelativeLayout>